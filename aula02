program VariaveisETipos;
var
    idade: integer; // Declaração de uma variável inteira
    salario: real;  // Declaração de uma variável real
    nome: string;   // Declaração de uma variável string
begin
    idade := 25;     // Atribuição de valor à variável idade
    salario := 2500.50; // Atribuição de valor à variável salario
    nome := 'Alice';    // Atribuição de valor à variável nome
    writeln('Nome: ', nome);
    writeln('Idade: ', idade);
    writeln('Salario: ', salario:0:2); // Exibe o salário com 2 casas decimais
end.
